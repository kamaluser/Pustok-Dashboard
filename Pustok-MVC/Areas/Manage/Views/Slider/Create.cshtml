@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Slider Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create">
                <div class="form-group">
                    <label asp-for="@Model.Title1">First title</label>
                    <input asp-for="@Model.Title1" class="form-control" placeholder="First title">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title2">Second title</label>
                    <input asp-for="@Model.Title2" class="form-control" placeholder="Second title">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Desc">Description</label>
                    <input asp-for="@Model.Desc" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BtnUrl">Button Url</label>
                    <input asp-for="@Model.BtnUrl" class="form-control" placeholder="Button Url">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BtnText">Redirect Url Text</label>
                    <input asp-for="@Model.BtnText" class="form-control" placeholder="Button Text">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Image">Image</label>
                    <input asp-for="@Model.Image" accept="image/*" class="form-control" placeholder="Image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div> 